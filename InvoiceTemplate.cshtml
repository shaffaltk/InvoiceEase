@page
@model BillingSystem.Pages.InvoiceTemplateModel


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Invoice</title>
    <style>
        body { font-family: Arial, sans-serif; }
        .invoice-box { max-width: 800px; margin: auto; padding: 30px; border: 1px solid #eee; box-shadow: 0 0 10px rgba(0, 0, 0, 0.15); font-size: 16px; line-height: 24px; color: #555; }
    </style>
</head>
<body>
    <div class="invoice-box">
        <h1>Invoice</h1>
        <p>Screen License ID: @Model.Billing.ScreenLicenseId</p>
        <p>Month/Year: @Model.Billing.MonthYear</p>
        <p>Amount: @Model.Billing.Amount</p>
        <p>Billed Date: @Model.Billing.BilledDate</p>
        <p>Payment Status: @Model.Billing.PaymentStatus</p>
    </div>
</body>
</html>
